{
  "name": "parse-cmd-args",
  "description": "Returns an object containing the path and flags parsed from process.argv",
  "version": "5.0.1",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=20.x"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/node": "20.12.10",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "typescript": "5.4.5"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "build": "rm -rf dist/ && tsc"
  },
  "keywords": [
    "parse",
    "cmd",
    "args"
  ],
  "jest": {
    "collectCoverage": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "authors": [
    {
      "name": "Scott Doxey",
      "email": "hello@scottdoxey.com",
      "homepage": "http://scottdoxey.com/"
    }
  ],
  "homepage": "https://github.com/neogeek/parse-cmd-args",
  "repository": {
    "type": "git",
    "url": "git://github.com/neogeek/parse-cmd-args.git"
  }
}
